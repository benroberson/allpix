#include "TFile.h"
#include "TH1.h"
#include "TCanvas.h"
#include <iostream>

void SaveHisto() {
  // 1. Open the existing ROOT file in read mode
  TFile *inFile = TFile::Open("input_file.root", "READ");
  if (!inFile || inFile->IsZombie()) {
    std::cerr << "Error: Could not open input file." << std::endl;
    return;
  }






  inFile->ls();
  //
  // go to thd pardnt directory
  //inFile->cd("DetectorHistogrammer;1/project_detector;1/charge;1");
  //  inFile->cd("project_detector;1");
  
  //  inFile->ls();

  //TFile *results = TFile::Open(resultsPath);
  const char* parentDir = "DetectorHistogrammer;1/project_detector;1/charge;1";
  inFile->cd(parentDir);
  TH1F::AddDirectory(false);

  TCanvas *canvas_n2;
  TKey *key_n2 = inFile->FindKeyAny("charge_map;1");  
  if(key_n2 != NULL){
    gDirectory->GetObject("charge_map;1", canvas_n2);
    TH1F* n2 = new TH1F("name","title", 100, 0, 100);
    canvas_n2->Draw();
  }
  //
  // TH1F *hist = nullptr;
  //gDirectory->GetObject("DetectorHistogrammer;1/project_detector;1/charge;1", hist);
    // TH1F* n2 = new TH1F("name","title", 100, 0, 100);
    //   canvas_n2->Draw(); 
 
   
  // Replace "name_of_histogram" with the actual name of your histogram in the file
  // 2. Retrieve the histogram from the file 
  //inFile->GetObject("charge_map;1", hist);

  if (!n2) {
    std::cerr << "Error: Could not find histogram 'name_of_histogram' in file." << std::endl;
    inFile->Close();
    return;
  }

  // 3. Option A: Save to a new ROOT file
  // Open a new ROOT file in "RECREATE" mode to write the histogram
  TFile *outFile = TFile::Open("output_hist.root", "RECREATE");
  if (!outFile || outFile->IsZombie()) {
    std::cerr << "Error: Could not open output file for writing." << std::endl;
    // Clean up input file before returning
    inFile->Close();
    return;
  }

  // Change the current directory to the output file so the object is written there
  outFile->cd();
  // Write the histogram to the output file
  n2->Write();
  // Close the output file. This is crucial to ensure data is saved correctly.
  outFile->Close();

  std::cout << "Histogram saved to output_hist.root" << std::endl;

 
  // 5. Close the input file
  inFile->Close();

  // The canvas and histogram will be cleaned up by ROOT's memory management when the macro finishes
}
