#!/bin/bash

# Loop from 1 to 10
for i in {1..10}
do
    echo "--- Starting Iteration: $i ---"

    # Run the first macro
    # Syntax: 'macro.C(arg1, arg2)'
    root -l -b -q "save_histogram.C($i)"

    # Run the second macro
    root -l -b -q "histogram_data.C($i)"

    echo "--- Iteration $i Finished ---"
    echo ""
    done
